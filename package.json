{
  "name": "dpo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@vimeo/player": "^2.1.0",
    "bootstrap-grid": "^2.0.1",
    "imagemin": "^5.3.1",
    "imagemin-gm": "^1.0.3",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-webp": "^4.0.0",
    "jsonfile": "^3.0.1",
    "metalsmith": "^2.3.0",
    "metalsmith-filter": "^1.0.2",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-to-json": "^1.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-scripts": "1.0.10",
    "react-snapshot": "^2.0.0-1",
    "styled-components": "^2.1.1",
    "swiper": "^3.4.2"
  },
  "scripts": {
    "start": "yarn run interactify-cms && yarn run interactify-optimize && NODE_PATH=./src react-scripts start",
    "build": "yarn run interactify-cms && yarn run interactify-optimize && NODE_PATH=./src react-scripts build && yarn run interactify-defer",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "interactify-cms": "node scripts/mdtojson.js",
    "interactify-defer": "yarn run delete-map-files && yarn run delete-references-to-map-files && yarn run defer-js && node scripts/optimize.js",
    "interactify-optimize": "node scripts/optimize.js",
    "delete-map-files": "find ./build -name '*.map' -delete",
    "delete-references-to-map-files": "find ./build -type f -name '*.html' -exec sed -i -E 's/<link.*rel=\"stylesheet\">//' {} +",
    "defer-js": "find ./build -type f -name '*.html' -exec sed -i -E 's/.js\"><\\/script>/.js\" defer=\"defer\"><\\/script>/g' {} +"
  }
}
